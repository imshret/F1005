<div class="container">
	<hr style="background-color:rebeccapurple" />
	<h2>即時新聞</h2>
	<hr style="background-color:rebeccapurple" />

	<div class="panel panel-primary">
		<div id="PanelID" class="panel-heading">即時財經新聞</div>
		<div class="panel-body">
			<table id="NewsTable" class="table-bordered table-striped table-hover">
				<thead>
					<tr>
						<th>新聞連結</th>
						<th>內容概敘</th>
						<th>發布時間</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td><a href="@item.Link">@item.Title</a>/></td>
							<td style="width:100px;">@item.Description</td>
							<td style="width:100px;">@item.PubDate</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

