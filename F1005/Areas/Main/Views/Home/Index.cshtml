@section styles{
	<style>
		hr.style-three {
			border: 0;
			border-bottom: 1px dashed #ccc;
			background: #999;
		}


		.col-lg-4 {
			padding: 10px;
			position: relative;
		}

			.col-lg-4 img {
				width: 100%;
				height: 100%;
				border-radius: 20px;
			}

			.col-lg-4 #view {
				position: absolute;
				top: 10px;
				left: 10px;
				text-align: center;
				background-color: rgba(0,0,0,0.4);
				width: 370px;
				height: 250px;
				border-radius: 20px;
				color: white;
				opacity: 0;
				font-family: 'Microsoft JhengHei';
			}

				.col-lg-4 #view:hover {
					opacity: 1;
				}

			.col-lg-4 h1 {
				margin-top: 100px;
			}

		.page_container img {
			opacity: 0.8;
		}

			.page_container img:hover {
				opacity: 1;
			}

		#view a {
			text-decoration:none;
			color:white;
		}
	</style>
}


